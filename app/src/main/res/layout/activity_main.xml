<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity"
		android:padding="2dp">


	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:orientation="vertical"
				  android:layout_toLeftOf="@id/board_right">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="horizontal">

			<RelativeLayout
					android:id="@+id/view_block_one"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_weight="1"
					android:layout_marginRight="2dp"
					android:background="@color/colorPrimary">

				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
						  android:text="正常"
						  android:textSize="25sp"
						  android:fontFamily="@font/digifaw"
						  android:textColor="@color/white"
						  android:layout_centerHorizontal="true"
						  android:layout_marginTop="10dp"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="20"
						  android:fontFamily="@font/digifaw"
						  android:textSize="40sp"
						  android:textColor="@color/white"
						  android:id="@+id/tv_info_one"
						  android:layout_centerInParent="true"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="1号车间"
						  android:textSize="20sp"
						  android:fontFamily="@font/digifaw"
						  android:layout_alignParentBottom="true"
						  android:textColor="@color/white"
						  android:layout_centerHorizontal="true"
						  android:layout_marginBottom="10dp"
				/>

			</RelativeLayout>

			<RelativeLayout android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:orientation="horizontal"
							android:layout_weight="1"
							android:background="@color/colorPrimary"
			>
				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="正常"
						  android:textSize="25sp"
						  android:fontFamily="@font/digifaw"
						  android:textColor="@color/white"
						  android:layout_centerHorizontal="true"
						  android:layout_marginTop="10dp"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="20"
						  android:id="@+id/tv_info_two"
						  android:fontFamily="@font/digifaw"
						  android:textSize="40sp"
						  android:textColor="@color/white"
						  android:layout_centerInParent="true"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="1号车间"
						  android:textSize="20sp"
						  android:fontFamily="@font/digifaw"
						  android:layout_alignParentBottom="true"
						  android:textColor="@color/white"
						  android:layout_centerHorizontal="true"
						  android:layout_marginBottom="10dp"
				/>
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">

			<RelativeLayout android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:orientation="horizontal"
							android:background="@color/colorPrimary"
							android:layout_marginRight="2dp"
			>
				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="正常"
						  android:textSize="25sp"
						  android:textColor="@color/white"
						  android:layout_centerHorizontal="true"
						  android:layout_marginTop="10dp"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="20"
						  android:id="@+id/tv_info_thr"
						  android:fontFamily="@font/digifaw"
						  android:textSize="40sp"
						  android:textColor="@color/white"
						  android:layout_centerInParent="true"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="1号车间"
						  android:textSize="20sp"
						  android:layout_alignParentBottom="true"
						  android:textColor="@color/white"
						  android:fontFamily="@font/digifaw"
						  android:layout_centerHorizontal="true"
						  android:layout_marginBottom="10dp"
				/>
			</RelativeLayout>

			<RelativeLayout android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:orientation="horizontal"
							android:layout_weight="1"
							android:background="@color/colorPrimary"
			>
				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="正常"
						  android:textSize="25sp"
						  android:textColor="@color/white"
						  android:layout_centerHorizontal="true"
						  android:layout_marginTop="10dp"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="20"
						  android:id="@+id/tv_info_for"
						  android:textSize="40sp"
						  android:textColor="@color/white"
						  android:fontFamily="@font/digifaw"
						  android:layout_centerInParent="true"
				/>

				<TextView android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:text="1号车间"
						  android:textSize="20sp"
						  android:fontFamily="@font/digifaw"
						  android:layout_alignParentBottom="true"
						  android:textColor="@color/white"
						  android:layout_centerHorizontal="true"
						  android:layout_marginBottom="10dp"
				/>
			</RelativeLayout>
		</LinearLayout>

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:layout_alignParentRight="true"
				android:orientation="vertical"
				android:background="@color/col_16B8DA"
				android:layout_alignParentBottom="true"
				android:id="@+id/board_bottom">

			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
					  android:textColor="@color/white"
					  android:text="A2DP" android:layout_centerInParent="true" android:textSize="30dp"/>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout android:layout_width="150dp"
				  android:layout_marginLeft="2dp"
				  android:layout_height="match_parent"
				  android:layout_alignParentRight="true"
				  android:orientation="vertical"
				  android:background="@color/col_5dba2b"
				  android:id="@+id/board_right">

		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:orientation="horizontal">

			<Button android:layout_width="wrap_content" android:layout_height="60dp" android:layout_weight="1"
					android:text="配置"/>
			<Button android:layout_width="wrap_content" android:layout_height="60dp" android:layout_weight="1"
					android:text="返回"/>

		</LinearLayout>

		<RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
						android:orientation="vertical">
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="2018-11-01"
					  android:id="@+id/tv_data"
					  android:fontFamily="@font/digifaw"
					  android:gravity="center_horizontal"
			/>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="8:00"
					  android:gravity="center_horizontal"
					  android:id="@+id/tv_time"
					  android:layout_below="@+id/tv_data"
					  android:visibility="gone"
			/>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="星期五"
					  android:id="@+id/tv_week"
					  android:layout_below="@+id/tv_time"
					  android:gravity="center_horizontal"
					  android:visibility="gone"
			/>
		</RelativeLayout>

		<LinearLayout android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:orientation="horizontal"
					  android:layout_marginTop="20dp"
					  android:layout_gravity="center_horizontal"
		>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="接入设备："

			/>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="0"
					  android:id="@+id/tv_device_num"
			/>
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:orientation="horizontal"
					  android:layout_marginTop="20dp"
					  android:layout_gravity="center_horizontal"
		>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="故障设备："

			/>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="0"
					  android:id="@+id/tv_device_err_num"
			/>
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:orientation="horizontal"
					  android:layout_marginTop="20dp"
					  android:layout_gravity="center_horizontal"
		>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="告警设备："

			/>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="0"
					  android:id="@+id/tv_device_warring_num"
			/>
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:orientation="horizontal"
					  android:layout_marginTop="20dp"
					  android:layout_gravity="center_horizontal"
		>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="最近告警："

			/>
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:text="0"
					  android:id="@+id/tv_device_warring_late_num"
			/>
		</LinearLayout>


	</LinearLayout>

</RelativeLayout>